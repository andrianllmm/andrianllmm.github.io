<div class="col mb-4">
  <a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}">
    <div class="card h-100 rounded-lg">
      <div class="row no-gutters">
        {% if project.img %}
          <div class="col-md-6">
            {% include figure.liquid loading="eager" path=project.img sizes="(min-width: 768px) 156px, 50vw" alt="project thumbnail" class="card-img" %}
          </div>
        {% endif %}
        <div class="{% if project.img %}col-md-6{% else %}col-md-12{% endif %}">
          <div class="card-body">
            <h3 class="card-title mb-1">{{ project.title }}</h3>
            <p class="card-text mb01">{{ project.description }}</p>
            <div class="d-flex flex-wrap">
              {% for skill in project.skills %}
                <span class="badge m-1 rounded-pill align-middle">{{ skill }}</span>
              {% endfor %}
            </div>
            <div class="row mt-auto ml-auto mr-1 p-0 pt-3">
              {% if project.demo %}
                <div class="demo-icon mr-2">
                  <div class="icon" data-toggle="tooltip" title="Demo">
                    <a href="{{ project.demo }}"><i class="fa-solid fa-external-link-alt"></i></a>
                  </div>
                </div>
              {% endif %}
              {% if project.github %}
                <div class="github-icon mr-2">
                  <div class="icon" data-toggle="tooltip" title="Code Repository">
                    <a href="{{ project.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
                  </div>
                  {% if project.github_stars %}
                    <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                      <i class="fa-solid fa-star"></i>
                      <span id="{{ project.github_stars }}-stars"></span>
                    </span>
                  {% endif %}
                </div>
              {% endif %}
              <div class="knowmore-icon mr-2">
                <div class="icon" data-toggle="tooltip" title="Know More">
                  <a href="{{ project.url | relative_url }}"><i class="fa-solid fa-lightbulb"></i></a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
