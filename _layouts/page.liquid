---
layout: default
---
<div class="post">
  <header class="post-header">
    <h1 class="post-title" {% if page.title_align %}style="text-align: {{ page.title_align }}{% endif %}">
      {{ page.title }}
    </h1>
    {% if page.description %}
      <p class="post-description">
        {{ page.description }}
      </p>
    {% endif %}
  </header>
  <hr>

  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
